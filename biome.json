{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "ignore": ["./.temp", "./dist"]
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "rules": {
      "suspicious": {
        "noExplicitAny": "off"
      },
      "performance": {
        "noDelete": "off"
      },
      "style": {
        "noVar": "off"
      },
      "correctness": {
        "noInnerDeclarations": "off"
      },
      "complexity": {
        "useLiteralKeys": "off"
      }
    }
  }
}
